        <Button x:Name="button" Content="GO" HorizontalAlignment="Left" Height="56" Margin="209,217,0,0" VerticalAlignment="Top" Width="109" Click="button_Click"/>
        <TextBox x:Name="MidiPath" HorizontalAlignment="Left" Height="38" Margin="151,29,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="230" MouseLeftButtonDown="MidiSelect" PreviewMouseLeftButtonDown="MidiSelect"/>
        <TextBox x:Name="WavePath" HorizontalAlignment="Left" Height="38" Margin="151,84,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="230" MouseLeftButtonDown="WaveSelect" PreviewMouseLeftButtonDown="WaveSelect"/>
        <TextBox x:Name="LrcPath" HorizontalAlignment="Left" Height="38" Margin="151,145,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="230" MouseLeftButtonDown="LrcSelect" PreviewMouseLeftButtonDown="LrcSelect"/>
    </Grid>
</Window>

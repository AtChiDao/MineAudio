<Controls:MetroWindow x:Class="ExecutiveMidi.SubWindow.Export"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:local="clr-namespace:ExecutiveMidi.SubWindow"
        mc:Ignorable="d"
        Title="导出设置" Height="222" Width="212"
        Initialized="Window_Initialized" Closed="MetroWindow_Closed"
        MaxHeight="222" MaxWidth="212" MinHeight="222" MinWidth="212"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Icon="/img/executivemidi.ico">
    <Grid Margin="0,-12,0,-2">
        <TextBlock Text="序列延伸方向" FontSize="12px" Margin="50,24,50,159"/>
        <ComboBox x:Name="延伸方向" Text="东（x+）" Margin="50,48,50,128" Height="24" SelectionChanged="_SelectionChanged"/>
        <TextBlock Text="序列宽度" FontSize="12px" Margin="50,83,50,100"/>
        <TextBox x:Name="序列宽度" Margin="50,108,50,70" TextChanged="NumericOnly" KeyDown="_KeyDown" PreviewKeyDown="_KeyDown"/>
        <TextBlock Text="保持区块加载" FontSize="12px" Margin="50,148,50,35"/>
        <CheckBox x:Name="保持区块加载" Margin="136,146,46,37" Click="_Click"/>
        <Button x:Name="Done" HorizontalAlignment="Left" Margin="93,173,0,0" VerticalAlignment="Top" Height="24" Width="24" MouseLeftButtonDown="DoneChanges" PreviewMouseLeftButtonDown="DoneChanges">
            <Image Source="/img/done.png"  Stretch="Fill" Height="24" Width="24" RenderTransformOrigin="0.5,0.5" Margin="0,0,-10,-14" >
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform X="-5" Y="-7"/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
        </Button>
    </Grid>
</Controls:MetroWindow>

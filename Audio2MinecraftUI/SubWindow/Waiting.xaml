<Window  x:Class="Audio2MinecraftUI.SubWindow.Waiting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Audio2MinecraftUI.SubWindow"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="200"
             xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             MinHeight="120" MinWidth="200" MaxHeight="120" MaxWidth="200"
             ResizeMode="NoResize"
             WindowStyle="None" Background="{x:Null}"  AllowsTransparency="True"
             WindowStartupLocation="CenterOwner"
             ShowInTaskbar="False">
    <Grid>
        <Controls:ProgressRing Foreground="{DynamicResource AccentColorBrush}"/>
    </Grid>
</Window>
